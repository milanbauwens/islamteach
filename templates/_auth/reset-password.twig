{% extends "_layouts/users" %}

{% block content %}

	<section class="login__container" style="background-image: url({{siteUrl}}assets/resources/images/login.svg)">
		<div class="login__wrapper">
			<form method="post" accept-charset="UTF-8">
				{{ csrfInput() }}
				{{ actionInput('users/send-password-reset-email') }}
				{{ failMessageInput('Er is iets misgegaan. Probeer het later opnieuw') }}
				{{ successMessageInput('Nieuw wachtwoord is goed opgeslagen!') }}

				{% if errorMessage is defined %}
					<p class="error">{{ errorMessage }}</p>
				{% endif %}

				<div class="formgroup">
					<h2 class="subtitle">Vul je E-mail in en check vervolgens je inbox voor verdere instructies.</h2>
				</div>

				<div class="formgroup">
					<label for="loginName">E-mail</label>
					{{ input('text', 'loginName', '', {
                            id: 'loginName',
                            autocomplete: 'username',
                    }) }}
				</div>

				<button class="button button--login">Verstuur</button>
			</form>

			<p class="formgroup formgroup--center">
				<a class="link" href="{{ url('login') }}">Terug naar login</a>
			</p>

		</div>
	</section>

{% endblock %}
