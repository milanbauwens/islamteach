{% extends "_layouts/site" %}

{% block content %}
	{% set escaperooms = craft.entries.section('escaperooms').all() %}

	<div class="wrapper">
		<div class="mb-10">
			<div class="mb-2">
				<h1 class="title title--flex">Alle Edu escaprooms
					<span class="results__count">{{escaperooms|length}}</span>
				</h1>
			</div>

			{% if escaperooms|length > 0 %}
				<div class="escaperoom__wrapper">
					{% for escaperoom in escaperooms %}
						{% include "_includes/components/escaperoom" %}
					{% endfor %}
				</div>
			{% else %}
				<div class="flex flex--center">
					<div class="state--empty">
						<img src="{{siteUrl}}assets/resources/images/nothing-found.svg">
						<h3>Het is hier leeg</h3>
						<p>Er zijn nog geen beschikbare escaperooms. Probeer het later nog eens.
						</p>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
